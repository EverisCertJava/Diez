package mx.com.everis.tallerjava.ejemplo;

public class sumArr {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		short[] i0 = {4,3,2,1};
		int sum = 0;
		
		System.out.println("Indice: "+i0[0]);
		for(int i=0;i< i0.length; i++ ){
			sum=sum+i0[i];
		}
		System.err.println("Suma: "+sum);
		
		System.out.println("Indice: "+i0[i0.length-1]);
		for(int i=i0.length;i>0; i-- ){
			sum=sum+i0[i];
		}
		System.err.println("Suma: "+sum);
		

	}

}
